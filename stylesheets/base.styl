html
body
  margin: 0
  padding: 0
  height: 100%
  //- background-color: #555734
  font-size: 16px
  color: #2E2E2E
  background: $BACK

//- div
//-  display: block
//- white-space: break-word


h1
h2
h3
h4
h5
h6
  color: $header_col

h1 a
  text-decoration: none

h2 a
  text-decoration: none


#wrapper
  min-height: 100%
  position: relative
  background: $main_back
  width: $W

#main-header
  margin: 0 auto
  padding: 0
  height: $H_H
  background: $BACK
  h1
    margin: 0 0 0 20px
    a
      text-decoration: none
  img
    margin: 0
    padding: 0

#container
  padding-bottom: $F_H

#content
  padding-left: $nav_w

#main-footer
  position: absolute
  bottom: 0
  width: 100%
  height: $F_H
  background: $BACK

nav
  background: $nav_back
  width: $nav_w
  position: absolute
  left: 0
  top: $H_H
  bottom: 0
  display: block
  //- border-right: 1px solid lighten(@background, 6%)
  ul
    list-style: none
    margin: 0
    padding: 0
    li
      display: block
      text-align: center
      height: 30px
      line-height: 30px
      a
        color: $accent_col
        font-size: 18px
        &:visited
          color: $accent_col


article
  padding: 0
  margin: 0 auto
  header
    width: $w
    margin: 0 auto
    h1
      margin-bottom: 0
      margin-left: -6px
      font-size: 30px
    .meta
      color: $gray_light
      float: right
      text-align: right
  p
    line-height: 140%
    margin: 0 auto 14px
    padding: 0
    width: $w
  pre
    background: $nav_back
    margin: 30px 0 30px
    padding: 10px 10px 20px 70px
    overflow: hidden
  //- float: left

footer p
  text-align: right
  color: #2F2F2F

