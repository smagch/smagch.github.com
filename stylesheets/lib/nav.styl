.nav-list
  margin-left: 0
  margin-bottom: 14px
  list-style: none
  li a
    display: block
    text-decoration: none
    height: 40px
    line-height: 40px
    vertical-align: middle
    padding-left: 14px
    &:hover
      background: lighten($nav_back, 6%)

  .nav-header
    margin-top: 20px
    display: block
    font-size: 14px
    font-weight: bold
    line-height: 20px
    height: 20px
    vertical-align: center
    color: white
    margin-left: 10px


