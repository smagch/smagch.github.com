.list-actions
  clearfix()
  padding: 10px 0
  li
    float: right
    list-style: none
    padding-left: 20px
    display: inline-block

.video-container
  position: relative
  margin: 6px
  padding-bottom: 56.25%
  padding-top: 30px
  height: 0
  overflow: hidden

.video-container iframe
.video-container object
.video-container embed
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

.img-container img
  max-width: 100%
