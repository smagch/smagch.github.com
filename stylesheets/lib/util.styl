.pull-right
  float: right
.pull-left
  float: left

ul.none
  margin: 0
  padding: 0
  list-style: none
  &.hlist
    display: inline
    li
      display: inline
      margin: 0 4px

.toggle-edit
  .exit
    display: none
  &.editing
    .edit
      display: none
    .exit
      display: block

// preview and publish
.actions
  padding: 10px
  margin: 0
  background: #5C6A99

.well
  clearfix()
  min-height: 20px
  padding: 19px
  margin-bottom: 20px
  background-color: #f5f5f5
  border: 1px solid #eee
  border: 1px solid rgba(0,0,0,.05)
  border-radius: 4px
  box-shadow: inset 0 1px 1px rgba(0,0,0,.05)
  blockquote
    border-color: #ddd;
    border-color: rgba(0,0,0,.15)

