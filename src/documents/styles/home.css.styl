@import 'html5'

html,
body {
  margin:0;
    padding:0;
    height:100%;
  background-color: #555734;
  font-size: 1em;
}
div {
  display: block;
  white-space: break-word;
}

h1,h2,h3,h4,h5,h6 {
  color: #2F2F2F;
}

h1 a {
  text-decoration: none;
}
h2 a {
  text-decoration: none;
}


#wrapper {
  min-height:100%;
  position:relative;
  padding-left: 0px;
  background-color: #596861;
  width: 960px;
}

header {
  margin: 0 auto;
  padding: 0;
  height: 40px;
  background-color: #555734;
}
header img {
  margin: 0;
  padding: 0;
}


header > h1 {
  margin: 0 0 0 20px;
}
header a {
  text-decoration: none;
}

#paginatedol {
  list-style-type: none;
}

.pagination {
  
}

#content {
  margin: 0;
  border-left: 8px solid #64383D;
  padding-top: 10px;
  padding-left: 40px;
  padding-right: 0;
    padding-bottom:40px;   /* Height of the footer */
  max-width:960px;
  overflow:auto;
  
}

article {
  padding: 0;
  margin: 0;
  width: 640px;
  float: left;
  
}
article p {
  line-height: 140%;
  margin: 0 0 1em 0;
  padding: 0 0 0 1em;
}
#rightcolumn {
  width: 200px;
  float: left;
  margin: 160px 0 0 28px;
  padding: 12px;
  background-color: #45504A;
  color: #2E2E2E;
}
#rightcolumn h2 {
  font-weight: bold;
  text-align: center;
}
#rightcolumn p {
  font-size: 0.9em;
  margin: 0 0 0.6em 0;
  padding: 0;
}

footer {
  position:absolute;
  bottom:0;
  width:100%;
  height:40px;   /* Height of the footer */
  background:#6cf;
  background-color: #555734;
}
footer p {
  text-align: right;
  color: #2F2F2F;
}
